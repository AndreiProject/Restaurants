<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hits_item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/fragment_hits_item_margin"
    android:layout_marginTop="@dimen/fragment_hits_item_margin"
    android:layout_marginEnd="@dimen/fragment_hits_item_margin"
    android:background="@drawable/hits_item_rounded_bg">

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/fragment_hits_item_image_margin_start"
        android:layout_marginTop="@dimen/fragment_hits_item_image_margin_top"
        android:layout_marginEnd="@dimen/fragment_hits_item_image_margin_end"
        android:background="@drawable/hits_item_rounded_bg"
        android:padding="@dimen/fragment_hits_item_image_padding"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_stub" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_hits_item_product_name_margin_top"
        android:textColor="@color/black"
        android:textSize="@dimen/fragment_hits_item_product_name_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        tools:text="Ролл Филадельфия" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_hits_item_description_margin_start"
        android:layout_marginTop="@dimen/fragment_hits_item_description_margin_top"
        android:layout_marginEnd="@dimen/fragment_hits_item_description_margin_end"
        android:layout_marginBottom="@dimen/fragment_hits_item_description_margin_bottom"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/fragment_hits_item_description_text_size"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        tools:text="Лосось, огурец, сливочный сыр. Вес: 240 гр." />
</androidx.constraintlayout.widget.ConstraintLayout>