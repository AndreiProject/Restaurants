<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reviews_item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/fragment_reviews_item_margin"
    android:layout_marginTop="@dimen/fragment_reviews_item_margin"
    android:layout_marginEnd="@dimen/fragment_reviews_item_margin"
    android:background="@drawable/reviews_item_rounded_bg">

    <ImageView
        android:id="@+id/is_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_reviews_item_is_positive_margin"
        android:src="@drawable/ic_like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_reviews_item_title_margin"
        android:layout_marginTop="@dimen/fragment_reviews_item_title_margin"
        android:layout_marginEnd="@dimen/fragment_reviews_item_title_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/fragment_reviews_item_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/is_positive"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Игорь о ресторане: РоллGrand" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_reviews_item_message_margin_start"
        android:layout_marginTop="@dimen/fragment_reviews_item_message_margin_top"
        android:layout_marginEnd="@dimen/fragment_reviews_item_message_margin_end"
        android:textColor="@color/black"
        android:textSize="@dimen/fragment_reviews_item_message_text_size"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="Привезли быстро, все было теплое и вкусное" />

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_reviews_item_data_margin_start"
        android:layout_marginTop="@dimen/fragment_reviews_item_data_margin_top"
        android:layout_marginEnd="@dimen/fragment_reviews_item_data_margin_end"
        android:layout_marginBottom="@dimen/fragment_reviews_item_data_margin_bottom"
        android:textColor="@color/black"
        android:textSize="@dimen/fragment_reviews_item_data_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message"
        tools:text="01.01.2022 12:00" />
</androidx.constraintlayout.widget.ConstraintLayout>